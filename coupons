     <script>
        function copyText(index) {
            var textToCopy = document.getElementsByClassName("textToCopy")[index - 1];
            textToCopy.select();
            document.execCommand('copy');
            alert("คัดลอกข้อความแล้ว: " + textToCopy.value);
        }
    </script>
